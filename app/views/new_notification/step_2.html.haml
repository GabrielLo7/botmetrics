.secondary-menu.row
  .col-sm-12
    = link_to bot_notifications_path(@bot), class: 'breadcrumb' do
      %h2 All Notifications
    %span.breadcrumb-separator
      \/
    %h2 New Notification
    %span.breadcrumb-separator
      \/
    %h2 Step 2 of 3

.row.steps
  .col-sm-12
    %h3 Step 2: Your Message
    %p What do you want to say to your users?

.container-fluid.notifications-container
  = simple_form_for @notification, url: step_3_bot_new_notification_index_path(@bot), method: :get  do |f|
    .row
      .col-sm-8.col-sm-offset-2

        = f.input :content, input_html: { rows: 10 }, label: 'Message', placeholder: 'e.g. We are proud to announce a new feature...'

    .steps-navigation
      = link_to 'Previous', step_1_bot_new_notification_index_path(@bot), class: 'btn btn-lg btn-warning'
      &nbsp;
      = f.submit 'Continue', class: 'btn btn-primary'
