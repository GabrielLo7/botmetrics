- if @weekly_dashboarders
  %h2
    Your Weekly Summary - Week starting from
    = (Time.current.in_time_zone(@user.timezone) - 7.days).strftime('%b %d, %Y')
    (Last Week)

  - @weekly_dashboarders.each do |bot, dashboarder|
    %h3= bot.name
    - if bot.provider == 'slack'
      = render 'dashboarder_stats_slack', bot: bot, dashboarder: dashboarder
    - else
      = render 'dashboarder_stats_other', bot: bot, dashboarder: dashboarder

    %hr

%br

%h2
  Your Daily Summary -
  = (Time.current.in_time_zone(@user.timezone) - 1.day).strftime('%b %d, %Y')
  (Yesterday)

- @daily_dashboarders.each do |bot, dashboarder|
  %h3= bot.name
  - if bot.provider == 'slack'
    = render 'dashboarder_stats_slack', bot: bot, dashboarder: dashboarder
  - else
    = render 'dashboarder_stats_other', bot: bot, dashboarder: dashboarder

  %hr

%p
  You can update your email preferences on #{link_to 'your botmetrics profile page', user_url(:me)}.

= mixpanel_event_tracking_pixel(@user, "Opened 'Daily Summary' Email")
