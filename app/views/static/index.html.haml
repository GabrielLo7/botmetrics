%nav.navbar.navbar-default
  .container-fluid.header-container
    .navbar-header
      %button.navbar-toggle.collapsed{type: 'button', 'data-toggle' => 'collapse'}
        %span.sr-only
          Toggle navigation
        %span.icon-bar
        %span.icon-bar
        %span.icon-bar
      %a.navbar-brand{href:"/"}
        botmetrics
    .collapse.navbar-collapse#header-links
      %ul.nav.navbar-nav.navbar-right
        %li= link_to 'Features', '#features'
        %li= link_to 'Sign In', new_user_session_path
        %li= link_to 'Sign Up', new_user_registration_path
    .jumbotron
      .row
        .col-md-12
          .row.tagline
            %p Collect &amp; Analyze Metrics From Your
            -#%p.source
              -#%span.slack
                -#Slack
              -#%span.messenger
                -#Messenger
              -#%span.kik
                -#Kik
              -#%span.telegram
                -#Telegram
            %p
              &nbsp;Bot
            .row
              %p.small-print
                Track Usage, Engagement &amp; Make Informed Product Decisions
            .row.signup
              %input.signup-email.form-control.input-lg{type:"email", placeholder:"Your Email: alice@example.com"}
              %a.btn.btn-lg.btn-success#get-started{'data-toggle' => 'modal', 'data-target' => '#signup-modal'}
                Get Started
.modal.fade.in#signup-modal{tabindex:"-1", role:"dialog"}
  .modal-dialog
    .modal-content
      .modal-header
        %button.close{type:"button", 'data-dismiss' => "modal", 'aria-label' => "Close"}
          %span{'aria-hidden' => 'true'}
            &times;
        %h3.modal-title
          Sign Up For Free
      .modal-body
        = render partial: 'devise/registrations/sign_up_form'

.container-fluid.features-container#features
  .row.features-header.text-center
    %h1 Why should I use botmetrics?
  .row.features-content
    .col-md-6.col-md-offset-3
      %ul
        %li
          Learn
          %strong how often
          your bot is being used
        %li
          Learn what
          %strong times of day
          your bot is being used
        %li
          Learn about the
          %strong teams
          using your bot
        %li
          Send Notifications to Keep your
          %strong Users Engaged
        %li
          It's
          %strong FREE!

.container-fluid.footer-container
  .row
    .col-md-4
      %ul.links
        %li
          © Ze Robot Labs Inc – 2015-2016
        %li
          = icon('user-secret')
          %a{href:"/privacy"} Privacy Policy
        %li
          = icon('envelope-o')
          %a{href:"mailto:hello@zerobotlabs.com"} hello@getbotmetrics.com
        %li
          = icon('github')
          %a{href:"https://github.com/botmetrics"} botmetrics
        %li
          = icon('twitter')
          %a{href:"https://twitter.com/getbotmetrics"} getbotmetrics
- content_for :page_scripts do
  :javascript
    App.page = new App.StaticIndex();
    App.page.run();
